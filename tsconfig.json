{
    "compilerOptions": {
        "outDir": "./dist/", // 构建输出目录 (因为我们大部分时间都在使用 Webpack，所以不太相关)
        "sourceMap":true,// 使 TypeScript 生成 sourcemaps
        //"noImplicitAny": false,
        "module":"es2015",// 使用 ES2015 模块
        "target": "es6",// 编译成 ES2015 (Babel 将做剩下的事情)
        "jsx": "react", //tsx 支持jsx语法
        "lib": ["es6", "dom"], // 编译过程中需要引入的库文件的列表
        "allowJs": true, //允许编译javascript文件。
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "allowSyntheticDefaultImports": true,
        "reactNamespace": "React"//让tsx 文件可以找到react 才能 import react
    },

    "exclude": [//不包含的编译目录
        "node_modules"
    ]
}